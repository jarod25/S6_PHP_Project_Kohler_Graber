{% if app.user and app.user == event.owner %}
    <form method="post" action="{{ path('app_event_delete', {id: event.id}) }}" style="display:inline-block;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">Supprimer</button>
    </form>
{% endif %}
