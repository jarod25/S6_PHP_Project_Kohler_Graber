{% extends 'base.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center">Liste des Événements</h1>

        {% if app.user %}
            <div class="d-flex justify-content-end mb-4">
                <a href="{{ path('app_event_new') }}" class="btn btn-primary">Créer un événement</a>
            </div>
        {% endif %}

        <div class="row">
            {% for event in pagination.items %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ event.title|slice(0, 24) }}
                            </h5>
                            <p class="card-text">
                                {{ event.description|slice(0, 30) }}
                            </p>
                            <p class="card-text">
                                <strong>Date de début : </strong>
                                {{ event.startDate|date('d/m/Y H:i') }}
                            </p>
                            <p class="card-text">
                                <strong>Date de fin : </strong>
                                {{ event.endDate|date('d/m/Y H:i') }}
                            </p>
                            <p class="card-text">
                                <strong>Nombre de participants maximum : </strong>
                                {{ event.nbMaxParticipants }}
                            </p>
                            <p class="card-text">
                                <strong>Évènement public : </strong>
                                {{ event.isPublic ? 'Oui' : 'Non' }}
                            </p>
                            <a href="{{ path('app_event_show', {id: event.id}) }}" class="btn btn-primary">Détails</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="alert alert-info text-center">Aucun événement trouvé.</p>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination, 'bundles/KnpPaginatorBundle/pagination.html.twig') }}
        </div>
    </div>
{% endblock %}
