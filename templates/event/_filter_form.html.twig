<div class="mb-4">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-3">
            {{ form_label(form.startDate) }}
            {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
        </div>
        {% if user is not null %}
            <div class="col-md-3">
                {{ form_label(form.isPublic) }}
                {{ form_widget(form.isPublic, {'attr': {'class': 'form-control form-select'}}) }}
            </div>
        {% endif %}
        <div class="col-md-3">
            {{ form_label(form.isFull) }}
            {{ form_widget(form.isFull, {'attr': {'class': 'form-control form-select'}}) }}
        </div>
        <div class="d-flex justify-content-end mt-3 {% if user is null %} col-md-3 {% endif %}">
            <button type="submit" class="btn btn-primary me-2">Rechercher</button>
            <a href="{{ path('app_event_index') }}" class="btn btn-secondary ms-2">RÃ©initialiser</a>
        </div>
    </div>
    {{ form_end(form) }}
</div>