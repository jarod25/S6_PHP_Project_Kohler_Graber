{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="my-4 text-center">Participants à mon événement</h1>
    <div class="container mt-4">
        <div class="row">
            {% for user in pagination.items %}
                <div class="col-6 mb-5">
                    <div class="card border-0 shadow rounded h-100">
                        <div class="card-body bg-light d-flex flex-column">
                            <p class="card-text">
                                <strong>Prénom : </strong>
                                {{ user.firstname }}
                            </p>
                            <p class="card-text">
                                <strong>Nom : </strong>
                                {{ user.lastname }}
                            </p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="alert alert-info text-center">Aucun utilisateur trouvé.</p>
                </div>
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center my-3">
            {{ knp_pagination_render(pagination, 'bundles/KnpPaginatorBundle/pagination.html.twig') }}
        </div>
    </div>
{% endblock %}