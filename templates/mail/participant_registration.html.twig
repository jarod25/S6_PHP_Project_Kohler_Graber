{% extends 'mail/base_email.html.twig' %}

{% block header %}Confirmation d'inscription{% endblock %}

{% block email_content %}
    <div class="card mx-auto">
        <div class="card-header bg-success text-white text-center">
            <h2>Confirmation d'inscription</h2>
        </div>
        <div class="card-body">
            <p>Bonjour {{ user.firstname ~ ' ' ~ user.lastname }},</p>
            <p>Vous êtes inscrit à l'événement <strong>{{ event.title }}</strong> qui aura lieu le <strong>{{ event.startDate|date('d/m/Y H:i') }}</strong>.</p>
            <p>Merci de votre participation !</p>
        </div>
        <div class="card-footer text-center">
            <small>&copy; {{ "now"|date("Y") }} Projet S6 PHP Kohler Graber. Tous droits réservés.</small>
        </div>
    </div>
{% endblock %}