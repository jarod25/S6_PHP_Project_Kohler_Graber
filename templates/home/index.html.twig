{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            {% for event in events %}
                <div class="col-6">
                    <div class="card border-0 mb-4 shadow rounded">
                        <div class="card-header">
                            <div class="d-flex justify-content-between p-2">
                                <h4 class="card-title">
                                    <strong>
                                        {{ event.title|slice(0, 24) }}
                                    </strong>
                                </h4>
                                <p class="card-text text-secondary">
                                    <b>
                                        <em class="{{ event.isPublic ? 'text-success' : 'text-danger' }}">
                                            Évènement {{ event.isPublic ? 'public' : 'privé' }}
                                        </em>
                                    </b>
                                </p>
                            </div>
                        </div>
                        <div class="card-body bg-light">
                            <p class="card-text">
                                {{ event.description|slice(0, 200) }}
                            </p>
                            <div class="d-flex justify-content-between">
                                <p class="card-text">
                                    <strong>Début : </strong>
                                    {{ event.startDate|date('d/m/Y H:i') }}
                                </p>
                                <p class="card-text">
                                    <strong>Fin : </strong>
                                    {{ event.endDate|date('d/m/Y H:i') }}
                                </p>
                            </div>
                            <p class="card-text">
                                <strong>Nombre de places disponibles : </strong>
                                {{ event.availablePlaces }}
                            </p>
                            <div class="d-flex justify-content-center">
                                <a href="{{ path('app_event_show', {id: event.id}) }}"
                                   class="btn btn-primary">Détails</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="alert alert-info text-center">Aucun événement trouvé.</p>
                </div>
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(events, 'bundles/KnpPaginatorBundle/pagination.html.twig') }}
        </div>
    </div>
{% endblock %}
